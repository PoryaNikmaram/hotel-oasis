echo "🔍 Running pre-push checks..."

# Check if we can build the project
echo "📦 Building project..."
npm run build

if [ $? -ne 0 ]; then
    echo "❌ Build failed! Push aborted."
    exit 1
fi

# Run full linting and formatting check
echo "🔍 Running full validation..."
npm run validate

if [ $? -ne 0 ]; then
    echo "❌ Validation failed! Push aborted."
    exit 1
fi

echo "🔍 Checking for files larger than 100MB..."

large_files=$(git diff --cached --name-only | xargs -I {} bash -c 'if [ -f "{}" ]; then du -m "{}" | awk "$1 > 100 { print \$2 }"; fi')

if [ -n "$large_files" ]; then
  echo "🚫 Push blocked! These files are larger than 100MB:"
  echo "$large_files"
  exit 1
fi

echo "✅ Pre-push checks passed!"