echo "ðŸ” Running pre-push checks..."

# Check if we can build the project
echo "ðŸ“¦ Building project..."
npm run build

if [ $? -ne 0 ]; then
    echo "âŒ Build failed! Push aborted."
    exit 1
fi

# Run full linting and formatting check
echo "ðŸ” Running full validation..."
npm run validate

if [ $? -ne 0 ]; then
    echo "âŒ Validation failed! Push aborted."
    exit 1
fi

echo "ðŸ” Checking for files larger than 100MB..."

large_files=$(git diff --cached --name-only | xargs -I {} bash -c 'if [ -f "{}" ]; then du -m "{}" | awk "$1 > 100 { print \$2 }"; fi')

if [ -n "$large_files" ]; then
  echo "ðŸš« Push blocked! These files are larger than 100MB:"
  echo "$large_files"
  exit 1
fi

echo "âœ… Pre-push checks passed!"